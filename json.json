{
	"info": {
		"name": "Trax SaaS - Full System (v2)",
		"description": "Collection completa com Auth, Campanhas (CRUD + Soft Delete), IA Assíncrona e Estratégia de Marca.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "01. Auth & Setup",
			"item": [
				{
					"name": "1. Sign Up (Cria Workspace)",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@trax.com\",\n    \"password\": \"Trax@123456\",\n    \"name\": \"Admin User\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/auth/sign-up"
					}
				},
				{
					"name": "2. Sign In (Gera Token)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.accessToken) {",
									"    pm.environment.set(\"jwt_token\", jsonData.accessToken);",
									"    console.log(\"Token atualizado!\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"admin@trax.com\",\n    \"password\": \"Trax@123456\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/auth/sign-in"
					}
				}
			]
		},
		{
			"name": "02. Campaigns Management",
			"item": [
				{
					"name": "3. Create Campaign",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"var jsonData = pm.response.json();",
									"if (jsonData.id) {",
									"    pm.environment.set(\"campaign_id\", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Lançamento Verão 2026\",\n    \"objective\": \"SALES\",\n    \"platform\": \"META\",\n    \"description\": \"Campanha focada em moda praia sustentável.\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/campaigns"
					}
				},
				{
					"name": "4. List All (Active Only)",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/campaigns"
					}
				},
				{
					"name": "5. Get One Details",
					"request": {
						"method": "GET",
						"header": [],
						"url": "{{baseUrl}}/campaigns/{{campaign_id}}"
					}
				},
				{
					"name": "6. Update Campaign",
					"request": {
						"method": "PATCH",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"targetAudience\": \"Jovens de 18-25 anos\",\n    \"brandTone\": \"Divertido e Colorido\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/campaigns/{{campaign_id}}"
					}
				},
				{
					"name": "7. Soft Delete Campaign",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": "{{baseUrl}}/campaigns/{{campaign_id}}"
					}
				}
			]
		},
		{
			"name": "03. AI Engine (Core)",
			"item": [
				{
					"name": "8. Brainstorm Strategy (Brand DNA)",
					"request": {
						"method": "POST",
						"header": [],
						"url": "{{baseUrl}}/campaigns/{{campaign_id}}/brainstorm"
					}
				},
				{
					"name": "9. Generate Image (Async BullMQ)",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"prompt\": \"Futuristic sneaker floating in neon void, 8k resolution, cinematic lighting\",\n    \"campaignId\": \"{{campaign_id}}\"\n}",
							"options": { "raw": { "language": "json" } }
						},
						"url": "{{baseUrl}}/ai/generate-image"
					}
				}
			]
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{jwt_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000/v1",
			"type": "string"
		},
		{
			"key": "campaign_id",
			"value": "",
			"type": "string"
		}
	]
}