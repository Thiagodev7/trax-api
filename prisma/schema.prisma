// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS GLOBAIS ---

enum Role {
  OWNER
  ADMIN
  MEMBER
}

enum CampaignObjective {
  AWARENESS
  TRAFFIC
  SALES
  LEADS
}

enum CampaignStatus {
  DRAFT
  GENERATING_STRATEGY
  WAITING_APPROVAL
  GENERATING_ASSETS
  COMPLETED
  PUBLISHED
}

enum AdPlatform {
  META
  GOOGLE
  LINKEDIN
}

// --- MODELS DE USUÁRIO E ORGANIZAÇÃO ---

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? // Auditoria: Soft Delete

  workspaces WorkspaceMember[]
  aiLogs     AiLog[]

  @@map("users")
}

model Workspace {
  id          String   @id @default(uuid())
  name        String
  description String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime? // Auditoria: Soft Delete

  members      WorkspaceMember[]
  campaigns    Campaign[]
  aiLogs       AiLog[]
  integrations Integration[]
  
  @@map("workspaces")
}

model WorkspaceMember {
  id          String    @id @default(uuid())
  role        Role      @default(MEMBER)
  
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  createdAt   DateTime  @default(now())

  @@unique([userId, workspaceId])
  @@index([userId])
  @@index([workspaceId])
  @@map("workspace_members")
}

// --- MODELS PRINCIPAIS ---

model Campaign {
  id              String            @id @default(uuid())
  name            String
  objective       CampaignObjective
  platform        AdPlatform        @default(META)
  
  targetAudience  String?           @db.Text
  keyBenefits     String?           @db.Text
  brandTone       String?
  
  status          CampaignStatus    @default(DRAFT)
  description     String?           @db.Text

  workspaceId     String
  workspace       Workspace         @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  createdBy       String 
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?         // Auditoria: Soft Delete

  adCreatives     AdCreative[]

  @@index([workspaceId])
  @@index([deletedAt]) // Índice para performance de queries filtradas
  @@map("campaigns")
}

model AdCreative {
  id           String   @id @default(uuid())
  name         String
  
  imageUrl     String?  @db.Text
  videoUrl     String?  @db.Text
  
  headline     String?  @db.Text
  primaryText  String?  @db.Text
  
  aiModel      String?
  isSelected   Boolean  @default(false)
  
  facebookAdId String?

  campaignId   String
  campaign     Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime? // Auditoria: Soft Delete

  @@index([campaignId])
  @@index([deletedAt])
  @@map("ad_creatives")
}

// --- LOGS E INTEGRAÇÕES ---

model AiLog {
  id           String   @id @default(uuid())
  workspaceId  String
  userId       String
  
  provider     String   
  model        String   
  type         String   
  
  inputTokens  Int
  outputTokens Int
  totalTokens  Int
  
  createdAt    DateTime @default(now())

  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
  @@map("ai_logs")
}

model Integration {
  id           String   @id @default(uuid())
  workspaceId  String
  
  provider     String   
  externalId   String   
  name         String   
  
  accessToken  String   @db.Text 
  refreshToken String?  @db.Text
  
  status       String   @default("ACTIVE")
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime? // Auditoria: Soft Delete

  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, provider, externalId])
  @@index([deletedAt])
  @@map("integrations")
}